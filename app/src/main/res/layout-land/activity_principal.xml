<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.quantumdeers.reversiw.Principal"
    android:background="@color/fondo_principal"
    android:orientation="horizontal">

    <TextView
        android:text="@string/titulo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="36sp"
        android:textAlignment="center"
        android:typeface="monospace"
        android:fontFamily="casual"
        android:gravity="center"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:text="@string/boton_entrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_MW_Jugar"
            android:layout_gravity="center"
            android:fontFamily="casual"
            android:textSize="30sp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:onClick="principal_CambiarPantalla"/>

        <Button
            android:text="@string/btn_instrucciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_MW_Instrucciones"
            android:fontFamily="casual"
            android:textSize="30sp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="principal_CambiarPantalla" />

        <Button
            android:text="@string/btn_puntuaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_MW_Puntuaciones"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:fontFamily="casual"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="principal_CambiarPantalla" />
    </LinearLayout>
</LinearLayout>
